<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header bg-primary">
          <h3 class="mb-0">Log in</h3>
        </div>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="card-body">
              <div class="mb-3">
                <%= f.input :email,
                            required: false,
                            autofocus: true,
                            label: "Email",
                            input_html: { class: "form-control", autocomplete: "email" } %>
              </div>
              <div class="mb-3">
                <%= f.input :password,
                            required: false,
                            label: "Password",
                            input_html: { class: "form-control", autocomplete: "current-password" } %>
              </div>

              <div>
                <%= f.input :remember_me, as: :boolean, label: "Remember me" if devise_mapping.rememberable? %>
              </div>
          </div>
          <div class="card-footer bg-light">
            <%= f.button :submit, "Log in", class: "btn btn-primary" %>
            <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
